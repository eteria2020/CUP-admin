<script type="text/javascript">
    $(document).ready(function() {

        var assignButton = $('#js-assign-card');

        $("#typeahead-input").typeahead({
            onSelect: function(item) {
                $(assignButton).data('code', item.value);
                $(assignButton).show();
            },
            ajax: {
                url: "/customers/ajax-card-code-autocomplete",
                triggerLength: 4,
                method: "get"
            }
        });

        $('#js-assign-card').click(function() {
            var customer = $(this).data('id');
            var code = $(this).data('code');
            $.ajax({
                url: '/customers/assign-card/' + customer,
                type: 'POST',
                data: {
                    rfid: code
                },
                cache: false,
                statusCode: {
                    200: function (response) {
                        $(assignButton).hide();
                        window.location.href = "/customers/edit/" + customer;
                    },
                    500: function (response) {
                        alert('Qualcosa Ã¨ andato storto, riprova!');
                    }
                }
            });

        });
    })
</script>
